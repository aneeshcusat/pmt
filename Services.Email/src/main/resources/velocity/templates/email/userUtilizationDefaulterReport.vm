#set( $subject = "${subject}")
<p><strong>Hi All,</strong></p>
<p><strong>&nbsp; &nbsp; &nbsp; </strong>You are over/under utilized on ${reportDate}. Please take a corrective action if required.</p>
<table>
<tbody>
<tr style="background-color: #69d5ed;">
<td><strong>Sl No</strong></td>
<td><strong>Employee Name</strong></td>
<td><strong>Reporting Manager</strong></td>
<td><strong>Billable hours</strong></td>
<td><strong>Non billable hours</strong></td>
<td><strong>Leave or Holiday</strong></td>
<td><strong>Utilization</strong></td>
<td><strong>Total Hours</strong></td>
</tr>
#set($index = 0)
 #foreach ($utilization in $utilizationData)
  #set($index = $index+1)
    <tr>
		<td style="text-align: center;">$index</td>
		<td style="text-align: center;">$utilization.employeeName</td>
		<td style="text-align: center;">$!utilization.reportingManager</td>
		<td style="text-align: center;">$utilization.billableHours</td>
		<td style="text-align: center;">$utilization.nonBillableHours</td>
		#if($utilization.leaveOrHoliday > 0)
			<td style="background-color: #ff0;text-align: center;">$utilization.leaveOrHoliday</td>
		#else
			<td style="text-align: center;">$utilization.leaveOrHoliday</td>
		#end
		#if($utilization.underOrOverUtilized)
			<td style="background-color: #f00;text-align: center;">$utilization.utilization %</td>
		#else
			<td style="text-align: center;">$utilization.utilization %</td>
		#end
		<td style="text-align: center;">$utilization.totalHours</td>
	</tr>
  #end

</tbody>
</table>