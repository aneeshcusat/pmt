<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
   <context:property-placeholder location="classpath:properties/famstack-application-default.properties, classpath:properties/famstack-application-${spring.profiles.active}.properties" ignore-unresolvable="true" />
 
   <context:component-scan base-package="com.famstack.projectscheduler" />
   
   <bean id="famstackApplicationConfiguration" class="com.famstack.projectscheduler.configuration.FamstackApplicationConfiguration" init-method="initialize"/>
   
   <bean class="org.springframework.web.context.support.ServletContextAttributeExporter">
    <property name="attributes">
        <map>
            <entry key="applicationConfiguraion" value-ref="famstackApplicationConfiguration"/>
        </map>
    </property>
	</bean>

	<bean id="famstackNotificationServiceManager" class="com.famstack.projectscheduler.notification.FamstackNotificationServiceManager">
	<property name="notificationServices">
	   <list>
		   <ref bean="famstackEmailNotificationService" />
		</list>
	</property>
	</bean>
   <bean id="famstackAccountManager" class="com.famstack.projectscheduler.manager.FamstackAccountManager" init-method="initialize">
	</bean>
</beans>
